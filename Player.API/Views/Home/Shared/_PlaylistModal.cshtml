@model PlaylistViewModel

<form id="playlist-form" method="post"
      data-create-action="@Url.Action("CreatePlaylist")"
      data-update-action="@Url.Action("UpdatePlaylist")">
    @Html.AntiForgeryToken()
    <div class="modal" tabindex="-1" id="playlist-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create playlist</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input hidden="hidden" asp-for="Id"/>
                    <div class="mb-3">
                        <label asp-for="Name" class="col-form-label">Name:</label>
                        <input type="text" class="form-control" maxlength="100" asp-for="Name">
                    </div>
                    <div asp-validation-summary="All"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="save-playlist-btn">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</form>